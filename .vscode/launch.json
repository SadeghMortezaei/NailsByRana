{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "firefoxExecutable": "/usr/bin/firefox",
      "reAttach": true,
      "pathMappings": [
        {
          "url": "webpack:///src/",
          "path": "${workspaceFolder}/src"
        }
      ],
      "keepProfileChanges": true,
      "profileDir": "/path/to/your/firefox/profile" // Hier den Pfad zum Profilverzeichnis angeben
    }
  ]
}
